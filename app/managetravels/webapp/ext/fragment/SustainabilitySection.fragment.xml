<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:macros="sap.fe.macros"
	xmlns:layout="sap.ui.layout">
	<VBox id="vbox">
		<MessageStrip id="messageStrip"
			type="Success"
			text="Plant some trees with a one percent fee on your Travel Price"
			visible="{ui>/isEditable}"/>

		<layout:Grid id="grid"
			hSpacing="1"
			containerQuery="true"
			defaultSpan="L6 M6 S12"
			class="sapUiTinyMarginTop">
			<layout:content>

				<Image id="image"
					width="100%"
					src="/managetravels/ext/fragment/forest.png" />

				<macros:Form id="form"
					metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#sustainability"/>

			</layout:content>
		</layout:Grid>
	</VBox>
</core:FragmentDefinition>